<%= form_for @task do |f| %> <br>
<%= f.label "Title" %> <br>
<%= f.text_field :title %> <br>
<%= f.label "Detail" %><br>
<%= f.text_area :details %><br>

<% if request.path.include?("edit") %>
  <%= f.label "Completed?" %>
  <%= f.check_box :completed %> <br>
<% end %>
<%= f.submit %><br>
<% end %>